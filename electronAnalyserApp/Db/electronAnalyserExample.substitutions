
# Macros:
#  P        Device Prefix
#  R        Device Suffix
#  PORT     Asyn Port name
#  TIMEOUT  Timeout
#  ADDR     Asyn Port address
file $(AREA_DETECTOR)/db/ADBase.template
{
pattern { P, 			  R, 	   PORT, 	       TIMEOUT, ADDR }
    	{ "ELECTRON-ANALYSER-01", ":TEST:", "CCD.CAM", "1", 	"0"  }
}

# Macros:
#  P             Device Prefix
#  R             Device Suffix
#  PORT          Asyn Port name
#  TIMEOUT       Timeout
#  ADDR          Asyn Port address
#  NDARRAY_PORT  Input Array Port
#  NDARRAY_ADDR  Input Array Address
#  Enabled       Plugin Enabled at startup?
file $(AREA_DETECTOR)/db/NDPluginBase.template
{
pattern { P, R, PORT, TIMEOUT, ADDR, NDARRAY_PORT, NDARRAY_ADDR, Enabled }
    	{ "ELECTRON-ANALYSER-01", ":ROI:", "CCD.ROI", "1", "0", "CCD.CAM", "0", "0" }
    	{ "ELECTRON-ANALYSER-01", ":HDF:", "CCD.HDF", "1", "0", "CCD.CAM", "0", "0" }
    	{ "ELECTRON-ANALYSER-01", ":ARR:", "CCD.ARR", "1", "0", "CCD.CAM", "0", "0" }
    	{ "ELECTRON-ANALYSER-01", ":MPG:", "CCD.MPG", "1", "0", "CCD.CAM", "0", "0" }
    	{ "ELECTRON-ANALYSER-01", ":PROC:", "CCD.PROC", "1", "0", "CCD.CAM", "0", "0" }
    	{ "ELECTRON-ANALYSER-01", ":STAT:", "CCD.STAT", "1", "0", "CCD.CAM", "0", "0" }
}

